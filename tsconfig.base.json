{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "target": "es2022",
    "disableSizeLimit": true,
    "noImplicitAny": false,
    "removeComments": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": [ "es2022" ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "__tests__",
    "mini",
    "build",
    "dist"
  ]
}
